<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragmentDatabaseTabCsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:theme="@style/AppTheme">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewDatabaseExternal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="3dp"
            app:strokeColor="?attr/colorOutline">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <RadioButton
                    android:id="@+id/radio_button_database_external_csv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingVertical="10dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:text="@string/fragment_quotations_database_csv"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/buttonImport"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:text="@string/fragment_quotations_database_button_import"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/buttonInPlaceExport"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:text="@string/fragment_quotations_database_csv_inplace_export"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/buttonInPlaceEdit"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:text="@string/fragment_quotations_database_csv_inplace_edit"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/textViewExamplesInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="10dp"
                    android:text="@string/fragment_quotations_database_external_instructions_1_info"
                    app:drawableStartCompat="@drawable/ic_info_24" />

            <TextView
                    android:id="@+id/textViewExamples2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="9dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="10dp"
                    android:text="@string/fragment_quotations_database_external_instructions_1" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
