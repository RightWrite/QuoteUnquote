<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingTop="10dp"
    android:paddingEnd="5dp"
    android:paddingBottom="0dp"
    android:theme="@style/Theme.QuoteUnquote">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/textViewToolbarColour"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/fragment_appearance_colour"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerToolbarColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:background="@null"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:drawableStart="@drawable/ic_toolbar_first_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_first"
                android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchPrevious"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableStart="@drawable/ic_toolbar_previous_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_previous"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchToggleFavourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableStart="@drawable/ic_toolbar_favorite_red_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_favourite"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:drawableStart="@drawable/ic_toolbar_share_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_share"
                android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchNextSequential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_toolbar_next_sequential_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_next_sequential"
                android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toolbarSwitchNextRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableStart="@drawable/ic_toolbar_next_random_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:text="@string/fragment_appearance_toolbar_next_random"
                android:textSize="14sp"
                tools:ignore="TextContrastCheck" />
    </LinearLayout>

</LinearLayout>