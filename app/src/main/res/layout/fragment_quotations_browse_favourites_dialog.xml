<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:theme="@style/AppTheme">

    <TextView
            android:id="@+id/textViewNotificationSizeWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_toolbar_share_24"
            android:drawablePadding="10dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:text="@string/fragment_quotations_selection_favourites_dialog_browse_share"
            app:drawableStartCompat="@drawable/ic_info_24" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewFavourites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/browse_favourites"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="vertical"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/thumb_drawable"
            android:scrollbarTrackVertical="@drawable/line_drawable" />
<!--            app:fastScrollEnabled="true"-->
<!--            app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"-->
<!--            app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"-->
<!--            app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"-->
<!--            app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"-->

</LinearLayout>
