<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:theme="@style/Theme.QuoteUnquote">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/fragment_quotations_title"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textSize="22sp"
                android:textStyle="bold" />

    </LinearLayout>

    <RadioGroup
            android:id="@+id/radioGroupContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/radioButtonAll"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_quotations_all"
                android:textSize="14sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchAddToPreviousAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawablePadding="5dp"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_quotations_add_to_previous_count"
                android:textSize="14sp" />

        <View
                android:id="@+id/dividerAll"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp" />

        <RadioButton
                android:id="@+id/radioButtonAuthor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_quotations_author"
                android:textSize="14sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="0dp"
                    android:text="@string/fragment_quotations_not_listed" />

            <Spinner
                    android:id="@+id/spinnerAuthors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="10dp"
                    tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <View
                android:id="@+id/dividerAuthor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp" />

        <RadioButton
                android:id="@+id/radioButtonFavourites"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_toolbar_favorite_red_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_quotations_favourites"
                android:textSize="14sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp">

                <Button
                        android:id="@+id/buttonExport"
                        android:layout_width="110dp"
                        android:layout_height="48dp"
                        android:background="@drawable/corners_buttons"
                        android:text="@string/fragment_quotations_favourites_export_button"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:backgroundTint="@null" />

                <TextView
                        android:id="@+id/textViewLocalStorageInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:paddingEnd="0dp"
                        android:text="@string/fragment_quotations_favourites_export_instructions" />

            </LinearLayout>


        </LinearLayout>

        <View
                android:id="@+id/dividerFavourites"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/listDivider"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp" />

        <RadioButton
                android:id="@+id/radioButtonSearch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_quotations_search_24"
                android:drawablePadding="20dp"
                android:paddingVertical="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_quotations_search"
                android:textSize="14sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="5dp">

            <EditText
                    android:id="@+id/editTextSearchText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="@string/fragment_quotations_search_instructions"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="50"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </RadioGroup>

</LinearLayout>
