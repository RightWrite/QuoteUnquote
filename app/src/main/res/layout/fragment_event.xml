<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:text="@string/fragment_event_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="30sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/radioButtonNextSequential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_toolbar_next_sequential_black_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_next_sequential"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radioButtonNextRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_toolbar_next_random_black_24"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_next_random"
            android:textSize="15sp" />

    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="5dp"
        android:text="@string/fragment_event_where"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:paddingEnd="0dp">

        <RadioButton
            android:id="@+id/radioButtonWhereInWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_event_widgets_black_24"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_event_in_widget"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/radioButtonWhereAsNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_event_notifications_black_24"
            android:drawablePadding="5dp"
            android:paddingVertical="10dp"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_event_as_notification"
            android:textSize="15sp" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/fragment_event"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="0dp">

        <CheckBox
            android:id="@+id/checkBoxDeviceUnlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_event_unlock_black_24"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_event_device_unlock"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxDailyAt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_event_time_black_24"
                android:drawablePadding="5dp"
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_event_daily"
                android:textSize="15sp" />

            <TimePicker
                android:id="@+id/timePickerDailyAt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:timePickerMode="spinner" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
