<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:text="@string/fragment_event_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="48sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/radioButtonNextRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_toolbar_next_random_black_24"
                android:drawablePadding="5dp"
                android:paddingVertical="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_instructions_next_random"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonNextSequential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_toolbar_next_sequential_black_24dp"
                android:drawablePadding="5dp"
                android:paddingVertical="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_instructions_next_sequential"
                android:textSize="20sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp"
                android:text="@string/fragment_event_where"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="0dp">

                <RadioButton
                    android:id="@+id/radioButtonWhereInWidget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:drawableStart="@drawable/ic_event_widgets_black_24"
                    android:drawablePadding="5dp"
                    android:text="@string/fragment_event_in_widget"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioButtonWhereAsNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_event_notifications_black_24"
                    android:drawablePadding="5dp"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:text="@string/fragment_event_as_notification"
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/fragment_event"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="0dp">

        <CheckBox
            android:id="@+id/checkBoxDeviceUnlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_event_unlock_black_24"
            android:drawablePadding="5dp"
            android:paddingVertical="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_event_device_unlock"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <CheckBox
                android:id="@+id/checkBoxDailyAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_event_time_black_24"
                android:drawablePadding="5dp"
                android:paddingVertical="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_event_daily"
                android:textSize="20sp" />

            <TimePicker
                android:id="@+id/timePickerDailyAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>