<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp"
    android:paddingEnd="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:text="@string/fragment_appearance_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="48sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/fragment_appearance_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_colour"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerColour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_transparency"
                android:textSize="20sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/seek_bar_transparency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/fragment_appearance_transparency"
                android:max="10"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:stepSize="10"
                android:valueFrom="0"
                android:valueTo="100" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/fragment_appearance_text"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_family"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fragment_appearance_family_array"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_style"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fragment_appearance_style_array"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_size"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fragment_appearance_size_array"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:text="@string/fragment_appearance_colour"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerTextColour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="5dp"
                android:spinnerMode="dropdown" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/fragment_appearance_display_toolbar"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_colour"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerToolbarColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:drawableStart="@drawable/ic_toolbar_first_ff000000_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_first"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_toolbar_previous_ff000000_24"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_previous"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:drawableStart="@drawable/ic_toolbar_report_ff000000_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_report"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchToggleFavourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_toolbar_favorite_ff000000_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_favourite"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:drawableStart="@drawable/ic_toolbar_share_ff000000_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_share"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchNextSequential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_toolbar_next_sequential_ff000000_24dp"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_next_sequential"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/toolbarSwitchNextRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_toolbar_next_random_ff000000_24"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:text="@string/fragment_appearance_instructions_next_random"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>